generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id               String   @id @default(cuid())
  name             String
  age              Int
  medicalHistory   String
  eatingHabits     String
  diets            Diet[]
}

model Diet {
  id              String   @id @default(cuid())
  patientId       String
  startDate       DateTime
  endDate         DateTime
  patient         Patient  @relation(fields: [patientId], references: [id])
  meals           Meal[]
}

model Meal {
  id              String  @id @default(cuid())
  time            String
  protein         Float
  sugar           Float
  fat             Float
  taken           Boolean @default(false)

  diets           Diet[]
}

